<script>
    $('#add-category').submit((e)=>{
        e.preventDefault()
        
        let productSubCat=$('#sub-category').val()
        $('#exists').hide()
        $.ajax({
            url:'/admin/add-category',
            method:'post',
            data:{
                productSubCat
            },
            success:(response)=>{
                if(response.status){
                    window.location.href='/admin'
                }else{
                    $('#exists').show()
                }
            }
        })
    })
</script>