        <div class="content">
            <main>
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-md-12 m-auto">

                            <div class="bg-mattBlackLight my-2 p-3">

                                <h2 style="color: aliceblue;" class="text-center">Reports</h2>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 m-auto">
                            <div class="bg-mattBlackLight my-2 p-3" id="mad-max">
                                <form action="report-date" method="GET">
                                    <label for="">From</label>
                                    <input type="date" name="fromdate"  required>
                                    <label for="">To</label>
                                    <input type="date" name="todate" required>
                                    <input type="submit" value="Search" class="btn btn-success">
                                </form>
                                {{#if report}}
                                <table class="table mt-4">
                                    <thead>
                                        <tr>
                                            <th scope="col">No</th>
                                            <th scope="col" >User</th>
                                            <th scope="col" >Order Id</th>
                                            <th scope="col" >Date</th>
                                            <th scope="col" >Status</th>
                                            <th scope="col" >Ship Status</th>
                                            <th scope="col" >Payment Method</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody id="table-body">
                                        {{#each report}}
                                       <tr>
                                           <td>{{math @index "+" 1}}</td>
                                           <td>{{this.name}}</td>
                                           <td>{{this._id}}</td>
                                           <td>{{this.date}}</td>
                                           <td>{{this.status}}</td>
                                           <td>{{this.ship}}</td>
                                           <td>{{this.paymentMethod}}</td>
                                       </tr>
                                       {{/each}}
                                      

                                       
                                    </tbody>
                                </table>
                                <input type="text" id="total-amount" value="{{report.1.total}}" readonly>
                                
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        </main>
