<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-mattBlackLight fixed-top">
        <button class="navbar-toggler sideMenuToggler" type="button">
            <span class="navbar-toggler-icon"></span>
        </button>

        <a class="navbar-brand" href="/admin/">Admin Panel</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <div>

                        <a href="/logout"> <span class="text">Logout</span></a>
                    </div>





                </li>
            </ul>
        </div>
    </nav>
    <div class="wrapper d-flex">
        <div class="sideMenu bg-mattBlackLight">
            <div class="sidebar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/admin" class="nav-link px-2">
                            <i class="material-icons icon">
                                dashboard
                            </i>
                            <span class="text">Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/user-management" class="nav-link px-2">
                            <i class="material-icons icon">
                                person
                            </i>
                            <span class="text">User Management</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/product-management" class="nav-link px-2">
                            <i class="material-icons icon"> insert_chart </i><span class="text">Product
                                Management</span></a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/category-management" class="nav-link px-2">
                            <i class="material-icons icon"> book </i><span class="text">Category
                                Management</span></a>
                    </li>
                    <li class="nav-item">
                    <li class="nav-item">
                        <a href="/admin/get-all-orders" class="nav-link px-2">
                            <i class="material-icons icon">
                                pages
                            </i>
                            <span class="text">All Orders</span>
                        </a>
                    </li>
                    <a href="#" class="nav-link px-2">
                        <i class="material-icons icon">
                            settings
                        </i>
                        <span class="text">Settings</span>
                    </a>
                    </li>

                    <li class="nav-item">
                        <a href="/admin/report" class="nav-link px-2">
                            <i class="material-icons icon">
                                account_balance
                            </i>
                            <span class="text">Reports</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/coupon" class="nav-link px-2">
                            <i class="material-icons icon">
                                local_offer
                            </i>
                            <span class="text">Coupon</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/offer" class="nav-link px-2">
                            <i class="material-icons icon">
                                card_giftcard
                            </i>
                            <span class="text">Offer</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link px-2 sideMenuToggler">
                            <i class="material-icons icon expandView ">
                                view_list
                            </i>
                            <span class="text">Resize</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="content">
            <main>
                <div class="container-fluid">
                    <div class="col-md-12 m-auto">
                        <div class="bg-mattBlackLight my-2 p-3" id="mad-max">
                            <h2 style="color: aliceblue;" class="text-center">Voucher Manage</h2>
                        </div>
                    </div>
                    <div class="col-md-12 m-auto">
                        <div class="bg-mattBlackLight my-2 p-3" id="mad-max">
                            <a href="/admin/generate-code-form" class="btn btn-primary">Create New</a>
                            <table class="table mt-4">
                                <thead>
                                    <tr>
                                        <th scope="col">No</th>
                                        <th scope="col">Code</th>
                                        <th scope="col">Date</th>
                                        
                                        <th scope="col">Offer</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each coupons}}
                                    <tr>
                                        <td>{{math @index "+" 1}}</td>
                                        <td>{{this.coupon}}</td>
                                        <td>From {{this.from}} To {{this.to}}</td>
                                        <td>{{this.offer}} OFF</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

</body>