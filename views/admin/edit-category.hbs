                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 m-auto">
                            <div class="bg-mattBlackLight my-2 p-3">
                                <h2 style="color: aliceblue;" class="text-center">Edit Category</h2>
                            </div>
                        </div>
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-6 m-auto">
                                    <div class="bg-mattBlackLight my-2 p-3">
                                        <form id="add-category">
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Sub Category</label>
                                                <input type="text" class="form-control" id="sub-category"
                                                    aria-describedby="emailHelp" placeholder="Enter new category"
                                                    required name="productName" value="{{category.productSubCat}}" >
                                                    <input type="text" name="" id="pro-id" value="{{category._id}}" style="display: none;">

                                            </div>
                                            <div>
                                                <h5 style="color: red; display: none;" id="exists">Category exists</h5>
                                            <button type="submit" class="btn btn-primary" id="button-submit">Update Category</button>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </main>
        </div>
    </div>
   
<script>
    
    $('#add-category').submit((e)=>{
        e.preventDefault()
        
        let productSubCat=$('#sub-category').val()
        let proId=$('#pro-id').val()
        $('#exists').hide()
        $.ajax({
            url:'/admin/edit-category',
            method:'post',
            data:{
                productSubCat,proId
            },
            success:(response)=>{
                if(response.status){
                    window.location.href='/admin/category-management'
                }else{
                    $('#exists').show()
                }
            }
        })
    })
</script>