        <div class="content">
            <main>

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="bg-mattBlackLight my-2 p-3">
                                <h2 style="color: aliceblue;" class="text-center">User Management</h2>
                            </div>
                        </div>
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="bg-mattBlackLight my-2 p-3">
                                        <table class="table mt-4" id="userTable">
                                            <thead>
                                                <tr>
                                                    <th scope="col" class="table-text">Name of the User</th>
                                                    <th scope="col" class="table-text">User Email</th>
                                                    
                                                    <th scope="col" class="table-text">Action</th>
                                                    <th scope="col" class="table-text">Access</th>

                                                    


                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each userDetails}}
                                                <tr>
                                                    <td class="table-text">{{this.name}}</td>
                                                    <td class="table-text">{{this.email}}</td>
                                                    <td class="table-text">
                                                     {{#if this.block}}   
                                                    <a class="btn btn-success" href="/admin/unblock-user/{{this._id}}">Unblock</a>
                                                    {{else}}
                                                     <a class="btn btn-danger" href="/admin/block-user/{{this._id}}" onclick="return confirm(`Are you want to Block {{this.name}}`)"> Block</a></td>
                                                     {{/if}}
                                                    {{#if this.block}}
                                                    <td class="table-text" style="color: red;">Blocked</td>
                                                    
                                                    {{else}}
                                                    <td class="table-text" style="color: green;">Have access</td>

                                                    {{/if}}

                                                </tr>
                                                {{/each}}
                                                
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </main>
